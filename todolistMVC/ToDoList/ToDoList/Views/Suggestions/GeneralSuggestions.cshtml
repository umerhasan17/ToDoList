@model IEnumerable<ToDoList.Models.ToDo>

@{
    ViewBag.Title = "GeneralSuggestions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>GeneralSuggestions</h2>

<p>Here are your personalised suggestions.</p>

<table class="table">
    <tr>
        <td style="width: 60%"><strong>Description</strong></td>
        <td style="width: 20%"><strong>Priority Level</strong></td>
        <td style="width: 20%"><strong>Due Date</strong></td>
    </tr>

    @foreach (var item in Model)
    {
        if (item.PriorityLevel != null)
        {
            if (item.PriorityLevel == 1)
            {
                <tr>
                    <td style="width:60%">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td style="width:20%">ASAP</td>
                    <td style="width:20%">
                        @if (item.DueDate != null)
                        {
                            @item.DueDate.Value.ToString("dd/MM/yyyy")
                        }
                    </td>
                </tr>
            }
        }
    }

    @foreach (var item in Model)
    {
        if (item.PriorityLevel != null)
        {
            if (item.PriorityLevel == 2)
            {
                <tr>
                    <td style="width:60%">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td style="width:20%">High</td>
                    <td style="width:20%">
                        @if (item.DueDate != null)
                        {
                            @item.DueDate.Value.ToString("dd/MM/yyyy")
                        }
                    </td>
                </tr>
            }
        }
    }

    @foreach (var item in Model)
    {
        if (item.PriorityLevel != null)
        {
            if (item.PriorityLevel == 3)
            {
                <tr>
                    <td style="width:60%">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td style="width:20%">Medium</td>
                    <td style="width:20%">
                        @if (item.DueDate != null)
                        {
                            @item.DueDate.Value.ToString("dd/MM/yyyy")
                        }
                    </td>
                </tr>
            }
        }
    }

    @foreach (var item in Model)
    {
        if (item.PriorityLevel != null)
        {
            if (item.PriorityLevel == 4)
            {
                <tr>
                    <td style="width:60%">@Html.DisplayFor(modelItem => item.Description)</td>
                    <td style="width:20%">Low</td>
                    <td style="width:20%">
                        @if (item.DueDate != null)
                        {
                            @item.DueDate.Value.ToString("dd/MM/yyyy")
                        }
                    </td>
                </tr>
            }
        }
    }

    @foreach (var item in Model)
    {
        if (item.PriorityLevel == null)
        {
            <tr>
                <td style="width:60%">@Html.DisplayFor(modelItem => item.Description)</td>
                <td style="width:20%">None</td>
                <td style="width:20%">
                    @if (item.DueDate != null)
                    {
                        @item.DueDate.Value.ToString("dd/MM/yyyy")
                    }
                </td>
            </tr>
        }
    }



</table>
